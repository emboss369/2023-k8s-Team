apiVersion: v1
kind: Namespace
metadata:
  name: greengrass
---
apiVersion: apps/v1
kind: Deployment
metadata:
  namespace: greengrass
  name: client-{{ hostname }}-deployment
spec:
  selector:
    matchLabels:
      app: iotclient
  replicas: 1
  template:
    metadata:
      labels:
        app: iotclient
    spec:
      containers:
      - name: iotclient
        image: emboss369/simulated-temperature-sensor:2.31.0
        imagePullPolicy: Always
        env:
        - name: THING_NAME
          value: "{{ IOT_THING_NAME }}"
        - name: REGION
          value: "{{ AWS_REGION }}"
        - name: MQTT_TOPIC
          value: "{{ MQTT_TOPIC }}"
        volumeMounts:
        - mountPath: /app/certs
          name: certs
      volumes:
      - name: certs
        hostPath:
          path: {{ CERTS_PATH }}
          type: Directory
      nodeName: "{{ hostname }}"